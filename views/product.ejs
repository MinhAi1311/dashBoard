<%- include('header') %>
    <%- include('aside') %>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    <i class="fa fa-th"></i> Quản Lý Sản Phẩm
                </h1>
            </section>
            <!-- Main content -->
            <section class="content">
                <!-- Default box -->
                <div class="box">
                    <div class="box-body">

                        <form action="" method="get" class="form-inline" role="form">

                            <div class="form-group">

                                <input class="form-control" name="name" placeholder="Nhập tên sản phẩm">
                            </div>


                            <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
                            <a href="/them-san-pham" class="btn btn-success pull-right"><i class="fa fa-plus"></i> Thêm
                                mới</a>
                        </form>
                        <hr>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Name</th>
                                    <th>Category</th>
                                    <th>Price/ SalePrice</th>
                                    <th>Status</th>
                                    <th>Image</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% data.map(function(product, index){%>
                                    <tr>
                                        <td scope="row">
                                            <%= index + 1 %>
                                        </td>
                                        <td scope="row">
                                            <%= product.name %>
                                        </td>
                                        <td scope="row">
                                            <%= product.cname %>
                                        </td>
                                        <td scope="row">
                                            <%= product.price %> / <%= product.sale_price %>
                                        </td>
                                        <td scope="row">
                                            <%= product.Status==0 ? 'Tạm ẩn' : 'Hiển thị' %>
                                        </td>
                                        <td>
                                            <img width="60" src="uploads/<%= product.image %>" alt="">
                                        </td>
                                        <td class="text-right">
                                            <a href="/sua-san-pham/<%= product.id %>" class="btn btn-sm btn-primary"><i
                                                    class="fa fa-edit"></i> Sửa</a>
                                            <a href="/xoa-san-pham/<%= product.id %>" class="btn btn-sm btn-danger"><i
                                                    class="fa fa-trash"></i> Xoá</a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">

                        <ul class="pagination">
                            <li><a href="/san-pham/?page=<%=_page > 1 ? _page-1 : 1 %>">&laquo;</a></li>
                            <% for(i=1; i <=totalPage; i++){ %>
                                <li class="<%= _page == i ? 'active' : ''%>"><a href="/san-pham/?page=<%=i%>">
                                        <%= i %>
                                    </a></li>
                                <%} %>
                                    <li><a
                                            href="/san-pham/?page=<%=_page < totalPage? _page+1 : totalPage %>">&raquo;</a>
                                    </li>
                        </ul>

                    </div>
                </div>
                <!-- /.box -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <%- include('footer') %>